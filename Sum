using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int randomNumber;
            int sumPositiveNumbers=0;
            int minValue = 0;
            int maxValue = 101;
            int multipleOfFirstNumber = 3;
            int multipleOfSecondNumber = 5;

            Random random = new Random();
            randomNumber = random.Next(minValue, maxValue);

            for (int i = minValue; i <= randomNumber; i++)
            {
                if (i% multipleOfFirstNumber == 0 || i% multipleOfSecondNumber == 0)
                {
                    sumPositiveNumbers += i;
                }                
            }
            Console.WriteLine(sumPositiveNumbers);
            Console.WriteLine(randomNumber);
        }
    }
}
