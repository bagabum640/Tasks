using System;

namespace Task
{
    class Program
    {
        static void Main(string[] args)
        {
            int amountOldLedies;
            int timeOfVisit;
            int waitingTime;
            int waitingHours;
            int waitingMinutes;
            int hourDuration;

            timeOfVisit = 10;
            hourDuration = 60;

            Console.WriteLine("Сколько старушек в очереди?:");
            amountOldLedies = Convert.ToInt32(Console.ReadLine());
            waitingTime = amountOldLedies * timeOfVisit;
            waitingHours = waitingTime / hourDuration;
            waitingMinutes = waitingTime % hourDuration;

            Console.WriteLine($"Вы должны отстоять в очереди " + waitingHours + " часа и " + waitingMinutes + " минут.");            
        }
    }
}
