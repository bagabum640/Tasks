using System;

namespace Task
{
    class Program
    {
        static void Main(string[] args)
        {
            int amountGold;
            int amountCrystal;
            int priceCrystal;
            
            priceCrystal = 13;

            Console.WriteLine("Сколько у вас золота?");
            amountGold = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Кристаллы сегодня по 13 золотых, сколько вы хотите купить?");
            amountCrystal = Convert.ToInt32(Console.ReadLine());
                        
            amountGold -= amountCrystal * priceCrystal;

            Console.WriteLine($"Куплено кристаллов: " + amountCrystal + "\nОстаток золота: " + amountGold);
        }
    }
}
