using System;

namespace Task
{
    class Program
    {
        static void Main(string[] args)
        {
            string rightPassword = "tetriandoh";
            string userPassword;
            int tryCount = 3;

            Console.WriteLine("Enter password");

            for (int i = 0; i < tryCount; tryCount--)
            {
                userPassword = Console.ReadLine();
                if (userPassword == rightPassword)
                {
                    Console.WriteLine("Secret message");
                    break;
                }
                else
                {
                    Console.WriteLine($"Wrong password! Ð¢umber of attempts = {tryCount-1}");                    
                }                                   
            }
        }
    }
}
